extends layout

block main

  - var dir = 'assy'
  - var subdir = 'well'

  +itemhead(dir, subdir)

    +itemtitle(dir, subdir, 0)

    p
      +itemlink(dir, 'unbox', 3)
      | #{$i18n[dir][subdir].items[0].text1}
    p
      - var img = "/assy/images/well-woods.jpg"
      +image(img, img)
      +table($i18n[dir][subdir].items[0].table)

    +itemtitle(dir, subdir, 1)

    p
      - var img = "/assy/images/well-wood1.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text1}

    p
      - var img = "/assy/images/well-wood2.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text2}

    +itemtitle(dir, subdir, 2)

    p
      .row
        - var img = "/assy/images/well-screws1.jpg"
        +process-image(img, img, img)
        - var img = "/assy/images/well-screws2.jpg"
        +process-image(img, img, img)
        - var img = "/assy/images/well-screws3.jpg"
        +process-image(img, img, img)
      | #{$i18n[dir][subdir].items[2].text1}

    p
      - var img = "/assy/images/well-set.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[2].text2}

    +itemtitle(dir, subdir, 3)

    p
      - var img = "/assy/images/well-peltier-on.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text1}

    p
      - var img = "/assy/images/well-peltier-off.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text2}

    p
      - var img = "/assy/images/well-peltier-grease.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text3}

    p
      - var img = "/assy/images/well-peltier-complete.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text4}

    +itemtitle(dir, subdir, 4)

    p
      - var img = "/assy/images/well-aluminium-grease.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[4].text1}

    p
      - var img = "/assy/images/well-aluminium-complete.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[4].text2}

    +itemtitle(dir, subdir, 5)

    p
      - var img = "/assy/images/well-heatsink-leg.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[5].text1}

    p
      - var img = "/assy/images/well-heatsink-peel.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[5].text2}

    p
      - var img = "/assy/images/well-heatsink-complete.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[5].text3}

    +itemtitle(dir, subdir, 6)

    p
      - var img = "/assy/images/well-sponge.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[6].text1}

    +itemtitle(dir, subdir, 7)

    p
      - var img = "/assy/images/well-hinge.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[7].text1}

    p
      - var img = "/assy/images/well-latch.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[7].text2}

    p
      - var img = "/assy/images/well-complete.jpg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[7].text3}
  
    +nextstep('/assy/body/index.html', $i18n.assy.body.label)
