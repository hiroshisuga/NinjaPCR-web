extends layout

block main

  - var dir = 'assy'
  - var subdir = 'body'

  +itemhead(dir, subdir)

    +itemtitle(dir, subdir, 0)

    p
      +itemlink(dir, 'unbox', 4)
      | #{$i18n[dir][subdir].items[0].text1}
    p
      - var img = "/assy/images/body-woods.svg"
      +image(img, img)
      +table($i18n[dir][subdir].items[0].table)

    +itemtitle(dir, subdir, 1)

    p
      - var img = "/assy/images/body-fanguard.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text1}

    p
      - var img = "/assy/images/body-spacers.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text2}

    p
      - var img = "/assy/images/body-foots.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text3}

    p
      - var img = "/assy/images/body-sides.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text4}

    p
      - var img = "/assy/images/body-top.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[1].text5}

    +itemtitle(dir, subdir, 2)

    p
      - var img = "/assy/images/body-pcb.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[2].text1}

    +itemtitle(dir, subdir, 3)

    p
      - var img = "/assy/images/body-pcb-a.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text1}

    p
      - var img = "/assy/images/body-pcb-b.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text2}

    p
      - var img = "/assy/images/body-pcb-c.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text3}

    p
      - var img = "/assy/images/body-pcb-d.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text4}

    p
      - var img = "/assy/images/body-pcb-well-ready.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[3].text5}

    +itemtitle(dir, subdir, 4)

    p
      - var img = "/assy/images/body-pcb-well-set.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[4].text1}

    p
      - var img = "/assy/images/body-pcb-well-connect.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[4].text2}

    p
      - var img = "/assy/images/body-complete.svg"
      +image(img, img)
      | #{$i18n[dir][subdir].items[4].text3}

    +nextstep('/assy/setup/index.html', $i18n.assy.setup.label)
