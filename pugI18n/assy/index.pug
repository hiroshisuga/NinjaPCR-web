extends layout

block main

  - var dir = 'assy'
  - var subdir = 'index'

  +itemhead(dir, subdir)

    +itemtitle(dir, subdir, 0)

    p
      | #{$i18n.assy.index.items[0].text1}

    +itemtitle(dir, subdir, 1)
    
    p
      | #{$i18n.assy.index.items[1].text1}
    
    +itemtitle(dir, subdir, 2)
    
    p
      | #{$i18n.assy.index.items[2].text1}
    
    +itemtitle(dir, subdir, 3)
    
    p
      | #{$i18n.assy.index.items[3].text1}
      a.link(href="https://play.google.com/store/apps/details?id=st.tori.ninjapcrwifi", target="_blank") #{$i18n.assy.index.items[3].text2}
      | #{$i18n.assy.index.items[3].text3}
    
    +itemtitle(dir, subdir, 4)
    
    p
      | #{$i18n.assy.index.items[4].text1}
    
    +itemtitle(dir, subdir, 5)
    
    p
      | #{$i18n.assy.index.items[5].text1}

    +itemtitle(dir, subdir, 6)

    p
      | #{$i18n.assy.index.items[6].text1}
      
    h4 動作環境
    ul
      li WiFiアクセスポイント
        dl
          dt 周波数帯
          dd 2.4GHz (5GHz帯では使用できません)
          dt セキュリティ
          dd WEP / WPA / WPA2
          dt 規格
          dd 802.11 b/g/n
      li WiFi対応端末 (PC・スマートフォン・タブレットなど)
        dl
          dt 対応OS
          dd Windows・macOS・Linux・iOS・Android (OSバージョン4.1以上)
          dt Webブラウザ
          dd 
            | Safari・Google Chrome・Firefox (Androidの場合のみ
            a.link(href="https://play.google.com/store/apps/details?id=st.tori.ninjapcrwifi") 専用アプリケーション
            | が必要です)
      li 電源
    
    +nextstep('/assy/unbox/index.html', $i18n.assy.unbox.label)
