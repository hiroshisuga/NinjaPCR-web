extends layout-nav

block append head
  link(rel='stylesheet', href='/css/carousel.css')
  style(type='text/css')
    | body { padding-top : 42px; }

block content
  +navbar('/console/assy/op/maker/req/about/store/')

  main(role="main")
    include includes/carousel.pug
    
    div(style="max-width:800px;padding:2em;margin:auto;")
      section(style="padding:2em", id="wifi")
        h2.text-center Wi-Fi
        .row
          .col-12.col-sm-4.text-center
            img(src="/images/top_wifi.png" alt="Wi-Fi" style="width:100%;border:1px solid #ddd;max-width:280px;")
          .col-12.col-sm-8
            ul
              li Accessible from local network
              li Console works on web browsers on smartphones, tablets and PCs.
              li Powered by ESP8266
      
      section(style="padding:2em", id="accuracy")
        h2.text-center Accuracy
        .row
          .col-12.col-sm-4.text-center
            img(src="/images/top_accuracy.png" alt="Wi-Fi" style="width:100%;border:1px solid #ddd;max-width:280px;")
          .col-12.col-sm-8
            ul
              li 24bit AD converter
              li Switching low & high modes
              li Temperature simulation of sample in tubes
        
      section(style="padding:2em", id="open")
        h2.text-center Open-source
        .row
          .col-12.col-sm-4.text-center
            img(src="/images/top_open.jpg" alt="Open-source" style="width:100%;border:1px solid #ddd;max-width:280px;")
          .col-12.col-sm-8
            ul
              li All source codes and scematics are available on GitHub
              li Designed to be built easily

    footer.container.w-100.offset
      .row.justify-content-md-center
        //p.float-right
        //  a(href="#") Back to top
        p.col-md-auto
          | &copy; 2018 
          a(href="https://www.tori.st", target="_blank") Toriningen, Inc.
